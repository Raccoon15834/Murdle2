<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60"
        android:id="@+id/mid"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mid"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/guessName"
        android:text="adductor Longus and adductor brevis"
        style="@style/regTextStyle"/>
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorcode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mid"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/generakbuttonshape"/>
<!--            app:layout_constraintCircleRadius="10dp"/>-->


</androidx.constraintlayout.widget.ConstraintLayout>